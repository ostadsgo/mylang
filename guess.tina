// version 1
let rand = import("random");
let number = rand.randrange(1, 100);

for {
	guess = int(input("Take a guess.");
	if guess > number {
		print("geuss small");
	} else {
		if guess < number {
			print("guess bigger.");
		} else {
			print("You win!");
		}
	} // end outer else
